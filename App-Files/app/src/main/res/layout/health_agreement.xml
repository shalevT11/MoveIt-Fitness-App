<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/title"
        android:text="@string/head_health_agg"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/heart_pic" />


    <ScrollView
        android:background="@drawable/scrollview_background"
        android:padding="16dp"
        android:verticalScrollbarPosition="right"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <TextView
            android:fontFamily="@font/fredoka"
            android:gravity="right"
            android:textSize="16sp"
            android:id="@+id/txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/health_long_txt"
            android:textColor="@color/black"
             />
    </ScrollView>

    <CheckBox
        android:fontFamily="@font/fredoka"
        android:layout_gravity="right"
        android:id="@+id/checkboxHealthAgreement"
        android:layoutDirection="rtl"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:text="אני מאשר/ת ומסכים/ה להצהרת הבריאות"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/imgBtnCon"
        android:layout_marginTop="5dp"
        android:layout_width="155dp"
        android:layout_height="76dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/continue_ic"
         />

</LinearLayout>
