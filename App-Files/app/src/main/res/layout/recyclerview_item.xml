<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layoutDirection="rtl"
    android:gravity="center_vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="4dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#FF0000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/roundedImage"

                android:scaleType="centerCrop"
                android:background="@drawable/circle_img"
                android:clipToOutline="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/deadlift"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/lessonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="רגליים בוערות"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/lessonDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="חיזוק פלג גוף תחתון עם סקווטים, לאנג'ים ודדליפט במשקל בינוני."
                    android:textSize="14sp"
                    android:textColor="#333333"/>
            </LinearLayout>

            <CheckBox
                android:button="@null"
                app:buttonTint="@null"
                android:background="@drawable/checkbox_circle"
                android:clickable="true"
                android:id="@+id/checkBox"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:alpha="1"
                android:focusable="false"
                android:backgroundTint="@null"
                android:enabled="true"
                />
            <CheckBox
                android:layout_margin="8dp"
                android:clickable="true"
                android:button="@null"
                app:buttonTint="@null"
                android:background="@drawable/selector_heart"
                android:id="@+id/fav_button"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:contentDescription="מועדף"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
