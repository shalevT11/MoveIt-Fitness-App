<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/try_now"

    >



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-155dp">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleX="-1"
            android:src="@drawable/icon_back"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="16dp" /> <!-- flip -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רגליים בוערות"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTrainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שלו תורג'מן"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="60dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="92dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            >


            <TextView

                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="רגליים בוערות"
                android:id="@+id/tvBigLessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="44sp"
                android:textColor="@color/black"

                />

            <CheckBox
                android:layout_margin="8dp"
                android:button="@null"
                app:buttonTint="@null"
                android:background="@drawable/selector_heart"
                android:id="@+id/fav_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="מועדף"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/video_prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <VideoView
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

        </FrameLayout>



        <ScrollView
            android:id="@+id/scrollViewDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            android:background="@drawable/scrollview_background"
            android:padding="16dp"
            android:layoutDirection="rtl"
            android:verticalScrollbarPosition="right"
            android:scrollbars="vertical"
            android:layout_gravity="center"
            android:layout_below="@+id/video_prev"
            app:layout_constraintTop_toBottomOf="@+id/video_prev">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textDirection="rtl"
                android:text="@string/text_preview"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </ScrollView>



        <TextView
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:textSize="20sp"
            android:backgroundTint="@null"
            android:layout_gravity="center"
            android:id="@+id/tvRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בוצע בהצלחה ✅" />

        <Button
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:layout_gravity="center"
            android:id="@+id/btnRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="להירשם לשיעור" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>